public static int hayStackNeedle(String haystack, String needle) {

    int M = hastack.length();
    int N = needle.length();
    
    if(N > M || haystack == null || M == 0){
             return -1;
         }

    for (int i = 0; i < M - N + 1; i++) {
        if (haystack.substring(i, i + N).equals(needle)) {
            return i;
        }
    }
    return -1;
}
