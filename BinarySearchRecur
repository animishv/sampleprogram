public static int binarySearchRecursion(int[] input, int target, int start, int end) {

    int mid = (start + end) / 2;

    if (input[mid] == target) {
        return mid;
    } else if (input[mid] > target) {
        binarySearch(input, target, mid + 1, end);
    } else if (input[mid] < target) {
        binarySearch(input, target, start, mid + 1);
    }

}
